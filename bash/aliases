# DNS
alias hosts='subl /etc/hosts'
alias khosts='subl ~/.ssh/known_hosts'
alias fd='sudo dscacheutil -flushcache'

# default file list
alias ls='ls -lah'

# Common directories
alias cdd='cd ~/dev'

# Dotfiles
alias dotfiles='subl ~/.dotfiles'
alias dotfilesreload='source ~/.bash_profile'

# Get shit done
alias gsdw='cd ~/dev/opensource/get-shit-done/ && ./get-shit-done work'
alias gsdp='cd ~/dev/opensource/get-shit-done/ && ./get-shit-done play'

# Serve current directory on 9090
alias serveit='ruby -run -e httpd . -p 9090'

source ~/.custom_aliases
